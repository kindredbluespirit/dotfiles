[module/titlescript]
type = custom/script
tail = true
label = %output%
interval = 1
;exec = i3get -r t
exec = displaytitle

[module/titlehook]
type = custom/ipc
hook-0 = displaytitle
hook-1 = displaytitle
hook-2 = displaytitle switch
initial = 1
;click-left = polybar-msg hook titlehook 2
;click-right = polybar-msg hook titlehook 3

;polybar-msg hook MODULENAME HOOKNUMBER


[module/xkeyboard]
