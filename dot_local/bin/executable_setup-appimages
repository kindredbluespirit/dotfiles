#!/bin/sh

XDG_BIN_HOME=~/.local/bin
pushd $XDG_BIN_HOME

## bitwarden
f=bitwarden
# rm $f
## quotes are necessary here because of ? and =
url="https://vault.bitwarden.com/download/?app=desktop&platform=linux&variant=appimage"
## curl is giving an empty file for some reason
# curl -o $f $url
wget -O $f $url
chmod +x $f

popd
