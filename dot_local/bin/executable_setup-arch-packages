#!/bin/sh

## dependencies - fakeroot

## yay
tempdir=~/.cache/tempdir-398282
rm -rf $tempdir
mkdir -p $tempdir
pushd $tempdir
git clone https://aur.archlinux.org/yay-bin
pushd yay-bin
makepkg -si
popd
popd
rm -rf $tempdir

## install packages using yay
packages=(
yay-bin
zsh

tar
gzip
unzip

## handled by another setup script
# grml-zsh-config
# starship

## pactree
pacman-contrib

kdeconnect

mesa
