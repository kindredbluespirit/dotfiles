{{ range $_, $name := list "user" "kindredbluespirit" "onetruffle" "saitarun-vsi" -}}
{{ if eq $name "kindredbluespirit" -}}
Host gitlab.com
    User git
    IdentityFile ~/.ssh/{{- $name }}

Host github.com
    User git
    IdentityFile ~/.ssh/{{- $name }}

Host codeberg.org
    User git
    IdentityFile ~/.ssh/{{- $name }}

Host aur.archlinux.org
    User aur
    IdentityFile ~/.ssh/{{- $name }}

Host hf.co
    User git
    IdentityFile ~/.ssh/{{- $name }}

{{ end -}}
Host gitlab-{{- $name }}
    User git
    HostName gitlab.com
    IdentityFile ~/.ssh/{{- $name }}

Host github-{{- $name }}
    User git
    HostName github.com
    IdentityFile ~/.ssh/{{- $name }}

Host codeberg-{{- $name }}
    User git
    HostName codeberg.org
    IdentityFile ~/.ssh/{{- $name }}

Host aur-{{- $name }}
    User aur
    HostName aur.archlinux.org
    IdentityFile ~/.ssh/{{- $name }}

Host hf-{{- $name }}
    User git
    HostName hf.co
    IdentityFile ~/.ssh/{{- $name }}

{{ end -}}

# https://superuser.com/a/1542689/1106531
Match all
Include ~/.ssh/config.d/* 
